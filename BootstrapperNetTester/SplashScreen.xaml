<Window x:Class="BootstrapperNetTester.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BootstrapperNetTester"
        mc:Ignorable="d"
        Title="SplashScreen" Height="450" Width="800"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen" Background="Gray">
    <DockPanel>
        <ProgressBar DockPanel.Dock="Bottom" Value="{Binding ProgressValue}" Height="10" />
        <TextBlock DockPanel.Dock="Bottom" Text="{Binding ProgressText}" Margin="4" />
        <TextBlock Text="Splash screen"
                   FontSize="40"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
    </DockPanel>
</Window>
